' puml-theme-simplex-corrected-v2.puml
' Source palette: Bootswatch "Simplex" for Bootstrap 5.
' https://bootswatch.com/simplex/

' ===== Palette =====
!define SIMPLEX_PRIMARY   #D9230F
!define SIMPLEX_SECONDARY #6C757D
!define SIMPLEX_SUCCESS   #5CB85C
!define SIMPLEX_INFO      #5BC0DE
!define SIMPLEX_WARNING   #F0AD4E
!define SIMPLEX_DANGER    #D9534F
!define SIMPLEX_LIGHT     #F8F9FA
!define SIMPLEX_DARK      #212529
!define SIMPLEX_BODY      #212529
!define SIMPLEX_MUTED     #6C757D
!define SIMPLEX_BORDER    #DEE2E6
!define SIMPLEX_BG        #FFFFFF

' ===== Base =====
skinparam backgroundColor SIMPLEX_BG
skinparam shadowing false
skinparam DefaultFontName "Inter, Segoe UI, Roboto, Helvetica, Arial"
skinparam defaultTextAlignment left
skinparam Monochrome false
skinparam ArrowColor SIMPLEX_DARK
skinparam ArrowThickness 1
skinparam LineColor SIMPLEX_BORDER

' ===== Titles / Header =====
skinparam TitleFontColor SIMPLEX_BODY
skinparam TitleFontSize 20
skinparam TitleBorderColor SIMPLEX_BORDER
skinparam TitleBackgroundColor SIMPLEX_LIGHT

' ===== Notes =====
skinparam NoteBackgroundColor SIMPLEX_LIGHT
skinparam NoteBorderColor SIMPLEX_BORDER
skinparam NoteFontColor SIMPLEX_BODY

' ===== Legend =====
skinparam LegendBackgroundColor SIMPLEX_LIGHT
skinparam LegendBorderColor SIMPLEX_BORDER
skinparam LegendFontColor SIMPLEX_BODY

' ===== Sequence =====
skinparam sequence {
  ArrowColor SIMPLEX_DARK
  LifeLineBorderColor SIMPLEX_BORDER
  LifeLineBackgroundColor SIMPLEX_LIGHT
  ParticipantBorderColor SIMPLEX_BORDER
  ParticipantBackgroundColor SIMPLEX_LIGHT
  ParticipantFontColor SIMPLEX_BODY
  BoxBackgroundColor SIMPLEX_LIGHT
  BoxBorderColor SIMPLEX_BORDER
  DividerBackgroundColor SIMPLEX_PRIMARY
  DividerBorderColor SIMPLEX_PRIMARY
  DividerFontColor #FFFFFF
  NoteBackgroundColor SIMPLEX_LIGHT
  NoteBorderColor SIMPLEX_BORDER
  NoteFontColor SIMPLEX_BODY
}

' ===== Activity =====
skinparam activity {
  BackgroundColor SIMPLEX_LIGHT
  BarColor SIMPLEX_SECONDARY
  BorderColor SIMPLEX_BORDER
  DiamondBackgroundColor SIMPLEX_INFO
  DiamondBorderColor SIMPLEX_INFO
  StartColor SIMPLEX_SUCCESS
  EndColor SIMPLEX_DANGER
}

' ===== Class / Object =====
skinparam class {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_BORDER
  FontColor SIMPLEX_BODY
  ArrowColor SIMPLEX_DARK
}
skinparam object {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_BORDER
  FontColor SIMPLEX_BODY
}

' ===== Component / Node / Package =====
skinparam component {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_BORDER
  FontColor SIMPLEX_BODY
}
skinparam node {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_BORDER
  FontColor SIMPLEX_BODY
}
skinparam package {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_BORDER
  FontColor SIMPLEX_BODY
}

' ===== Use Case / Actor =====
skinparam usecase {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_BORDER
  FontColor SIMPLEX_BODY
}
skinparam actor {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_BORDER
  FontColor SIMPLEX_BODY
}

' ===== State =====
skinparam state {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_BORDER
  FontColor SIMPLEX_BODY
  StartColor SIMPLEX_SUCCESS
  EndColor SIMPLEX_DANGER
}

' ===== Timing / Gantt =====
skinparam gantt {
  ArrowColor SIMPLEX_DARK
  LineColor SIMPLEX_BORDER
  TaskBorderColor SIMPLEX_BORDER
  TaskBackgroundColor SIMPLEX_INFO
  TodayLineColor SIMPLEX_DANGER
}
skinparam timing {
  BackgroundColor SIMPLEX_LIGHT
  LineColor SIMPLEX_BORDER
  FontColor SIMPLEX_BODY
}

' ===== Colors for stereotypes (Bootstrap-like badges) =====
skinparam stereotype {
  CBackgroundColor<<primary>> SIMPLEX_PRIMARY
  CBorderColor<<primary>> SIMPLEX_PRIMARY
  CFontColor<<primary>> #FFFFFF
}
skinparam stereotype {
  CBackgroundColor<<secondary>> SIMPLEX_SECONDARY
  CBorderColor<<secondary>> SIMPLEX_SECONDARY
  CFontColor<<secondary>> #FFFFFF
}
skinparam stereotype {
  CBackgroundColor<<success>> SIMPLEX_SUCCESS
  CBorderColor<<success>> SIMPLEX_SUCCESS
  CFontColor<<success>> #FFFFFF
}
skinparam stereotype {
  CBackgroundColor<<info>> SIMPLEX_INFO
  CBorderColor<<info>> SIMPLEX_INFO
  CFontColor<<info>> #0B2E38
}
skinparam stereotype {
  CBackgroundColor<<warning>> SIMPLEX_WARNING
  CBorderColor<<warning>> SIMPLEX_WARNING
  CFontColor<<warning>> #3A2F05
}
skinparam stereotype {
  CBackgroundColor<<danger>> SIMPLEX_DANGER
  CBorderColor<<danger>> SIMPLEX_DANGER
  CFontColor<<danger>> #FFFFFF
}
skinparam stereotype {
  CBackgroundColor<<light>> SIMPLEX_LIGHT
  CBorderColor<<light>> SIMPLEX_BORDER
  CFontColor<<light>> SIMPLEX_BODY
}
skinparam stereotype {
  CBackgroundColor<<dark>> SIMPLEX_DARK
  CBorderColor<<dark>> SIMPLEX_DARK
  CFontColor<<dark>> #FFFFFF
}

' ===== Misc =====
skinparam rectangle {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_BORDER
  FontColor SIMPLEX_BODY
}
skinparam PartitionBorderColor SIMPLEX_BORDER
skinparam PartitionBackgroundColor SIMPLEX_LIGHT

' ===== Links / URLs =====
skinparam HyperlinkColor SIMPLEX_PRIMARY
skinparam HyperlinkUnderline true