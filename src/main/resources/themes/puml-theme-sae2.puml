' puml-theme-sae2.puml
' A light theme based on the Bootswatch "Simplex" palette.
' This theme is structured to match the working "sae" dark theme.

' ===== Palette: Bootswatch Simplex =====
!define SIMPLEX_PRIMARY   #D9230F
!define SIMPLEX_SECONDARY #6C757D
!define SIMPLEX_SUCCESS   #5CB85C
!define SIMPLEX_INFO      #5BC0DE
!define SIMPLEX_WARNING   #F0AD4E
!define SIMPLEX_DANGER    #D9534F
!define SIMPLEX_LIGHT     #F8F9FA
!define SIMPLEX_DARK      #212529
!define SIMPLEX_BODY      #212529
!define SIMPLEX_BORDER    #DEE2E6
!define SIMPLEX_BG        #FFFFFF

' ===== Base =====
skinparam backgroundColor SIMPLEX_BG
skinparam shadowing false

' ===== Defaults =====
skinparam default {
  FontColor SIMPLEX_BODY
  FontName "Inter, Segoe UI, Roboto, Helvetica, Arial"
  FontSize 12
}

' ===== Titles =====
skinparam title {
  FontColor SIMPLEX_BODY
  FontSize 18
  FontName "Inter-Bold, Segoe UI-Bold, Roboto-Bold, Helvetica-Bold, Arial-Bold"
  BackgroundColor SIMPLEX_BG
  BorderColor SIMPLEX_BORDER
}

' ===== Actors & Use Cases =====
skinparam actor {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_PRIMARY
}
skinparam usecase {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_PRIMARY
}

' ===== Activities & Partitions =====
skinparam activity {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_INFO
  BarColor SIMPLEX_PRIMARY
  ArrowColor SIMPLEX_BODY
}
skinparam partition {
  BackgroundColor SIMPLEX_BG
  BorderColor SIMPLEX_LIGHT
}

' ===== Sequence Diagram =====
skinparam sequence {
  ParticipantBackgroundColor SIMPLEX_LIGHT
  ParticipantBorderColor SIMPLEX_PRIMARY
  LifeLineBorderColor SIMPLEX_INFO
  LifeLineBackgroundColor SIMPLEX_SECONDARY
  GroupBackgroundColor SIMPLEX_LIGHT
  GroupBorderColor SIMPLEX_PRIMARY
  ReferenceBackgroundColor SIMPLEX_LIGHT
  ReferenceBorderColor SIMPLEX_BODY
  ArrowColor SIMPLEX_BODY
  DividerBackgroundColor SIMPLEX_PRIMARY
  DividerBorderColor SIMPLEX_PRIMARY
  DividerFontColor #FFFFFF
  ActorBorderColor SIMPLEX_PRIMARY
  ActorBackgroundColor SIMPLEX_LIGHT
  NoteBackgroundColor SIMPLEX_LIGHT
  NoteBorderColor SIMPLEX_BORDER
  NoteFontColor SIMPLEX_BODY
}

' ===== Other Elements =====
skinparam rectangle {
  BackgroundColor SIMPLEX_LIGHT
  BorderColor SIMPLEX_PRIMARY
  FontColor SIMPLEX_BODY
}